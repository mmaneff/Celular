<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:id="@+id/id_lista_categoria"    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_color_orange"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/imgCategoria"
        android:layout_width="35dp"
        android:layout_height="35dp"        
        android:layout_margin="10dp"
        android:src="@drawable/botonllamar" />

    <TextView
        android:id="@+id/tvNombreCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tvNombreCategoria"
        android:textColor="@color/white" />

</LinearLayout>
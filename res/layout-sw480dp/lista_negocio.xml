<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
	<ImageView
        android:id="@+id/imgNegocioImagen"        
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"	        
        android:src="@drawable/elpostino" />
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
    
	    <TextView
	        android:id="@+id/tvNegocioNombre"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="15dp"	
	        android:textStyle="bold"
	        android:text="@string/tvCompany"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/tvNegocioDireccion"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="15dp"	
	        android:text="@string/tvAddress"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <TextView
	        android:id="@+id/tvNegocioCercania"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
        	android:layout_marginLeft="15dp"	
	        android:text="@string/tvCercania"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
		
	</LinearLayout>
	
</LinearLayout>

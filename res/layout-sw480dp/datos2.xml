<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    android:orientation="vertical" >
    
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/fondomejorado"
        android:orientation="horizontal" >
        
		<ImageView
		    android:id="@+id/imageView1"
		    android:layout_width="45dp"
		    android:layout_height="45dp"
		    android:layout_marginLeft="10dp"
		    android:src="@drawable/logoretocado" />
		
		<TextView
		    android:id="@+id/textView1"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:gravity="center_vertical"
		    android:layout_marginLeft="20dp"
		    android:text="@string/tvTituloNegocio"
		    android:textColor="@color/white"
		    android:textStyle="bold"
		    android:textSize="@dimen/font_cabecera" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_margin="20dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY" />
        
        <TextView
               android:id="@+id/txtRazonSocial"
               android:layout_width="fill_parent"
               android:layout_height="150dp"
               android:gravity="center"               
               android:text="@string/tvRazonSocial1"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:textColor="@color/blanco"
               android:textSize="@dimen/font_titulo_vista_2"
               android:textStyle="bold" />
		
	</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_margin="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical"        
        android:background="@drawable/borde_izquierdo" >
		
		<TextView
		    android:id="@+id/txtDireccion"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvDireccion"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/blanco"
		    android:textStyle="bold"
		    android:gravity="left"
            android:textSize="@dimen/font_direccion_vista_2" />
		
		<TextView
		    android:id="@+id/txtTelefono"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvTelefono"
		    android:textAppearance="?android:attr/textAppearanceMedium" 
		    android:textColor="@color/blanco"
		    android:textStyle="bold"
		    android:gravity="left"
            android:textSize="@dimen/font_telefono_vista_2" />
		
		<TextView
		    android:id="@+id/txtLocalidad"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvLocalidad"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/blanco"
		    android:gravity="left"
            android:textSize="@dimen/font_localidad_vista_2" />		
		
    </LinearLayout>
        
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="100dp"
         android:gravity="center" >

         <Button
             android:id="@+id/btnRegresar"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"
             android:background="@color/purple_900"
             android:text="@string/btnRegresar"
             android:textColor="@color/white"
             android:textSize="@dimen/font_boton_vista_2"
             android:textStyle="bold" />

         <Button
             android:id="@+id/btnLlamar"
			 android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"
             android:background="@color/purple_900"
             android:text="@string/btnLlamar"             
             android:textColor="@color/white"
             android:textSize="@dimen/font_boton_vista_2"
             android:textStyle="bold" />
         
         <Button             
             android:id="@+id/btnMapa"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"
             android:background="@color/purple_900"
             android:text="@string/btnMapa"
             android:textColor="@color/white"
             android:textSize="@dimen/font_boton_vista_2"
             android:textStyle="bold" />

     </LinearLayout>
     
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@drawable/fondomejorado" >
    </LinearLayout>

</LinearLayout>

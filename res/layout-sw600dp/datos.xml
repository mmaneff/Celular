<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rojo"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/fondomejorado"
        android:orientation="horizontal" >
       
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logoretocado" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="@string/tvTitle"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center" 
        android:background="@color/blanco">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/elpostino2"
            android:scaleType="fitXY" />
        
        <TextView
               android:id="@+id/txtRazonSocial"
               android:layout_width="fill_parent"
               android:layout_height="250dp"
               android:gravity="center"               
               android:text="@string/tvRazonSocial1"
               android:textAppearance="?android:attr/textAppearanceLarge"
               android:textColor="@color/rojo"
               android:textSize="@dimen/font_size_42"
               android:textStyle="bold" />
		
	</LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >
    
        <TextView
            android:id="@+id/txtRazonSocial2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="@string/tvRazonSocial2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blanco"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/font_size_38" />
        
		<TextView
		    android:id="@+id/txtDetalle"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvDetalle"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/blanco"
		    android:textStyle="bold"
		    android:gravity="center"
            android:textSize="@dimen/font_size_28" />
		
		<TextView
		    android:id="@+id/txtDireccion"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvDireccion"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/blanco"
		    android:textStyle="bold"
		    android:gravity="center"
            android:textSize="@dimen/font_size_38" />
		
		<TextView
		    android:id="@+id/txtTelefono"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvTelefono"
		    android:textAppearance="?android:attr/textAppearanceMedium" 
		    android:textColor="@color/blanco"
		    android:textStyle="bold"
		    android:gravity="center"
            android:textSize="@dimen/font_size_38" />
		
		<TextView
		    android:id="@+id/txtLocalidad"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvLocalidad"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:textColor="@color/blanco"
		    android:gravity="center"
            android:textSize="@dimen/font_size_28" />
		
		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvHorario1"
		    android:textAppearance="?android:attr/textAppearanceMedium" 
		    android:textColor="@color/blanco"
		    android:textStyle="bold"
		    android:gravity="center"
            android:textSize="@dimen/font_size_38" />
		
		<TextView
		    android:id="@+id/txtHorario"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_margin="1dp"
		    android:text="@string/tvHorario2"
		    android:textAppearance="?android:attr/textAppearanceMedium" 
		    android:textColor="@color/blanco"
		    android:textStyle="bold"
		    android:gravity="center"
            android:textSize="@dimen/font_size_28" />
		
		<ImageView
            android:id="@+id/imglinea"
            android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="15dp"
            android:src="@drawable/linea" />
		
		<LinearLayout
	         android:layout_width="fill_parent"
	         android:layout_height="wrap_content"
	         android:gravity="center" >
         
		    <ImageView
	            android:id="@+id/imgMundo"
	            android:layout_width="60dp"
			    android:layout_height="60dp"
	            android:src="@drawable/mundo" />
		    
		    <ImageView
	            android:id="@+id/imgFacebook"
	            android:layout_width="60dp"
			    android:layout_height="60dp"
			    android:layout_marginLeft="40dp"
			    android:layout_marginRight="40dp"
	            android:src="@drawable/menufacebook" />
		    
		    <ImageView
	            android:id="@+id/imgTwitter"
	            android:layout_width="60dp"
			    android:layout_height="60dp"
	            android:src="@drawable/menupajarito" />
		    
		</LinearLayout>        
    </LinearLayout>
        
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="125dp"         
         android:gravity="center" >

         <Button
             android:id="@+id/btnRegresar"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"
             android:background="@color/rojo_pastel"
             android:text="@string/btnRegresar"
             android:textColor="@color/white"
             android:textSize="@dimen/font_size_24"
             android:textStyle="bold" />

         <Button
             android:id="@+id/btnLlamar"
			 android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"
             android:background="@color/rojo_pastel"
             android:text="@string/btnLlamar"             
             android:textColor="@color/white"
             android:textSize="@dimen/font_size_24"
             android:textStyle="bold" />
         
         <Button             
             android:id="@+id/btnMapa"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:layout_margin="5dp"
             android:background="@color/rojo_pastel"
             android:text="@string/btnMapa"
             android:textColor="@color/white"
             android:textSize="@dimen/font_size_24"
             android:textStyle="bold" />

     </LinearLayout>
     
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="45dp"
       android:background="@drawable/fondomejorado" >

    </LinearLayout>

</LinearLayout>

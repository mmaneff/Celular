<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomejorado"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" >
        
	    <ImageView
	        android:id="@+id/ivLogo"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="30dp"
	        android:layout_marginBottom="30dp"
	        android:src="@drawable/logoretocado" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/tvTitle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal"
	        android:text="@string/tvTitle"
	        android:textStyle="bold"
	        android:textColor="@color/white"
	        android:textSize="@dimen/font_titulo_principal" />

	</LinearLayout>
	    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="1.3"
        android:orientation="horizontal" >

        <com.facebook.widget.LikeView
	        android:id="@+id/like_view"
	        android:layout_width="200dp"
	        android:layout_height="200dp"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="30dp" />
        
        <Button
            android:id="@+id/btnYerbaBuena"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="35dp"
			android:background="@drawable/boton_redondo"            
            android:textColor="@color/white"
            android:textSize="@dimen/font_boton_principal"
            android:textStyle="bold"
            android:text="Yerba Buena"
            android:onClick="onCategoriaClick" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.3"
        android:gravity="center" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/publicidad"
            android:background="@drawable/pb_1"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.5"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/tvEncuentranos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="fill_vertical|center_horizontal"
            android:text="@string/tvFiendMe"
            android:textColor="@color/white"
            android:textSize="@dimen/font_pie_principal" />

        <ImageView
            android:id="@+id/ivMail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/menumail"
            android:onClick="onMailClick" />

        <ImageView
            android:id="@+id/ivFacebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/menufacebook"
            android:onClick="onFacebookClick" />

        <ImageView
            android:id="@+id/ivTwitter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/menupajarito"
            android:onClick="onTwitterClick" />
    </LinearLayout>

</LinearLayout>